<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudoku"
        android:textColor="#000000"
        android:textSize="48sp"
        android:fontFamily="@font/ztnature_medium"
        android:letterSpacing="-0.05"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="0dp"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_game_title"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/board_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_difficulty"
        app:layout_constraintBottom_toTopOf="@+id/buttons_container">

        <GridLayout
            android:id="@+id/sudoku_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="9"
            android:columnCount="9"
            android:padding="4dp">
        </GridLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/keypad_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btn_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Check"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/ztnature_medium"
            android:padding="12dp"
            android:background="@drawable/btn_border"/>

        <TextView
            android:id="@+id/btn_solve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Solve"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/ztnature_medium"
            android:padding="12dp"
            android:background="@drawable/btn_orange_rect"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keypad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView android:id="@+id/btn_1" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="1" />
            <TextView android:id="@+id/btn_2" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="2" />
            <TextView android:id="@+id/btn_3" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="3" />
            <TextView android:id="@+id/btn_4" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="4" />
            <TextView android:id="@+id/btn_5" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="5">

            <TextView android:id="@+id/btn_6" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="6" />
            <TextView android:id="@+id/btn_7" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="7" />
            <TextView android:id="@+id/btn_8" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="8" />
            <TextView android:id="@+id/btn_9" style="@style/KeypadButtonStyle" android:textStyle="normal" android:text="9" />
            <TextView
                android:id="@+id/btn_delete"
                style="@style/KeypadButtonStyle"
                android:text="âœ•"
                android:textStyle="normal"
                android:background="@drawable/circle_orange"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/custom_toast_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:contentPadding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_custom_toast_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ztnature_medium"
            android:gravity="center"
            android:text="Message"
            android:textColor="#000000"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>