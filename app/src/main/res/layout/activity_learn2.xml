<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tv_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules"
            android:textColor="#000000"
            android:textSize="64sp"
            android:fontFamily="@font/ztnature_medium"
            android:letterSpacing="-0.05"
            android:includeFontPadding="false"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_grid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3x3 Box"
            android:textColor="#E88E2E"
            android:textSize="32sp"
            android:fontFamily="@font/ztnature_medium"
            android:includeFontPadding="false"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_2" />

        <LinearLayout
            android:id="@+id/grid_visual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_grid_label">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/cell_1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="1"
                    android:background="@drawable/circle_orange"/>

                <TextView
                    android:id="@+id/cell_2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="2"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:id="@+id/cell_3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="3"
                    android:background="@drawable/circle_grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/cell_4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="4"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:id="@+id/cell_5"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="5"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:id="@+id/cell_6"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="6"
                    android:background="@drawable/circle_grey"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/cell_7"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="7"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:id="@+id/cell_8"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="8"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:id="@+id/cell_9"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textSize="32sp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/ztnature_medium"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:text="9"
                    android:background="@drawable/circle_grey"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_grid_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Each number appears only once per 3x3 highlighted box."
            android:textSize="22sp"
            android:textColor="#404040"
            android:fontFamily="@font/ztnature_medium"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/grid_visual" />

        <TextView
            android:id="@+id/btn_final_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/ztnature_medium"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/btn_border"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_grid_desc"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>